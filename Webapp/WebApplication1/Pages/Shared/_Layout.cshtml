<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta-Angaben für die Darstellung auf verschiedenen Geräten -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Titel der Webseite, mit dynamischem Anteil von ViewData -->
    <title>@ViewData["Title"] - Organisationsformen</title>

    <!-- Einbindung von Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Einbindung von benutzerdefinierten CSS-Dateien -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Kopfbereich mit Navigationsleiste -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <!-- Logo oder Titel der Webseite -->
                <a class="navbar-brand" asp-area="" asp-page="/Index">myForm</a>

                <!-- Schaltfläche für die mobile Navigation -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigationsmenü -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Menüpunkte mit Links zu verschiedenen Seiten -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Gestalten</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Informationen</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Hauptinhalt der Webseite -->
    <div class="container">
        <main role="main" class="pb-3">
            <!-- RenderBody dient zur Ausgabe des dynamischen Seiteninhalts -->
            @RenderBody()
        </main>
    </div>

    <!-- Fußbereich der Webseite -->
    <footer class="border-top footer text-muted">
        <div class="container">
            <!-- Copyright-Vermerk und Link zur Datenschutzseite -->
            &copy; 2023 - WebApplication1 - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Einbindung von jQuery und Bootstrap JavaScript -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Einbindung von benutzerdefiniertem JavaScript -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Optionaler Bereich für zusätzliche Skripte -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>